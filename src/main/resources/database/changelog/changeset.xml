<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="vkovalchuk">
        <createTable tableName="categories" remarks="Категорії">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="icon_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="path_url" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="vkovalchuk">
        <createTable tableName="subcategories" remarks="Субкатегорії">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="icon_name" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="path_url" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2-1" author="vkovalchuk">
        <preConditions onFail="MARK_RAN">
            <not>
                <customPrecondition className="com.ctp.liquibase.ForeignKeyExistsPrecondition">
                    <param name="schemaName" value="${schemaName}"/>
                    <param name="tableName" value="subcategories"/>
                    <param name="columnName" value="category_id"/>
                    <param name="foreignTableName" value="categories"/>
                </customPrecondition>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="subcategories"
                                 baseColumnNames="category_id"
                                 constraintName="fk_${schemaName}_subcategories_categories_id"
                                 referencedTableName="categories"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="3" author="vkovalchuk">
        <createTable tableName="images" remarks="Зображення товару">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="path_url" type="varchar(25)">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3-1" author="vkovalchuk">
        <preConditions onFail="MARK_RAN">
            <not>
                <customPrecondition className="com.ctp.liquibase.ForeignKeyExistsPrecondition">
                    <param name="schemaName" value="${schemaName}"/>
                    <param name="tableName" value="images"/>
                    <param name="columnName" value="product_id"/>
                    <param name="foreignTableName" value="product"/>
                </customPrecondition>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="images"
                                 baseColumnNames="product_id"
                                 constraintName="fk_${schemaName}_product_id"
                                 referencedTableName="product"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="4" author="vkovalchuk">
        <createTable tableName="product" remarks="Товар">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="product_title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="product_description" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="product_is_hot" type="boolean">
            </column>
            <column name="product_subcategory" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4-1" author="vkovalchuk">
        <preConditions onFail="MARK_RAN">
            <not>
                <customPrecondition className="com.ctp.liquibase.ForeignKeyExistsPrecondition">
                    <param name="schemaName" value="${schemaName}"/>
                    <param name="tableName" value="product"/>
                    <param name="columnName" value="product_subcategory"/>
                    <param name="foreignTableName" value="subcategories"/>
                </customPrecondition>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="product"
                                 baseColumnNames="product_subcategory"
                                 constraintName="fk_${schemaName}_product_subcategories_id"
                                 referencedTableName="subcategories"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>